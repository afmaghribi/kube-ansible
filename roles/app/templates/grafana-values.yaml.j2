datasources:
  datasources.yaml:
    apiVersion: 1
    datasources:
      - name: victoriametrics
        type: prometheus
        orgId: 1
        url: {{ vminsert_url }}:8481/select/0/prometheus/
        access: proxy
        isDefault: true
        editable: true

service:
  type: LoadBalancer
  loadBalancerIP: {{ grafana_lb_ip }}

dashboardProviders:
  dashboardproviders.yaml:
    apiVersion: 1
    providers:
      - name: default
        orgId: 1
        folder: ""
        type: file
        options:
          path: /var/lib/grafana/dashboards/default

dashboards:
  default:
    victoriametrics:
      gnetId: 10229
      datasource: victoriametrics
    kubernetes:
      gnetId: 14205
      datasource: victoriametrics
